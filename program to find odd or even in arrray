#include<stdio.h>
int main()
{
	int n,i,a[10];
	printf("enter the value of n:");
	scanf("%d",&n);
	printf("enter the elements:"); 
	
	for(i=0;i<n;i++){
		scanf("%d",&a[i]);
	}
	for(i=0;i<n;i++)
	{
		if(a[i]%2==0){
		printf("%d is even\n",a[i]);
	}else{
		printf("%d is odd\n",a[i]);
	}
	
}
	return 0;
	
}
